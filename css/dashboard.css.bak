:root{
  --blue:#1f6fff;
  --bg:#f3f4f7;
  --card:#ffffff;
  --text:#101828;
  --muted:#667085;
  --line:#e7e7ee;
  --shadow:0 14px 40px rgba(0,0,0,.10);
  --r:18px;
}

*{box-sizing:border-box}
html,body{height:100%}

body{
  margin:0;
  font-family:system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial,"PingFang SC","Microsoft YaHei",sans-serif;
  background:var(--bg);
  color:var(--text);
}

a{color:inherit;text-decoration:none}
button{font-family:inherit}

.app{
  max-width:460px;
  margin:0 auto;
  padding:14px 14px 84px;
}

/* 顶部栏 */
.topbar{
  display:flex;
  align-items:center;
  justify-content:space-between;
  margin-bottom:12px;
}
.brand{
  display:flex;
  align-items:center;
  gap:10px;
}
.logoDots{display:flex;gap:6px}
.logoDots .d{width:10px;height:18px;border-radius:2px;display:inline-block}
.logoDots .r{background:#ff3b30}
.logoDots .b{background:#0a84ff}
.logoDots .y{background:#ffd60a}
.logoDots .g{background:#34c759}

.brandName{font-weight:900; font-size:18px; line-height:1}
.vip{
  display:inline-block;
  margin-top:6px;
  font-weight:900;
  color:var(--blue);
  background:rgba(31,111,255,.10);
  padding:3px 10px;
  border-radius:999px;
  font-size:12px;
}

.topActions{display:flex;gap:10px;align-items:center}
.iconbtn{
  width:38px;height:38px;
  border-radius:999px;
  border:0;
  cursor:pointer;
  background:#fff;
  box-shadow:0 10px 22px rgba(0,0,0,.10);
  display:grid;
  place-items:center;
  font-size:18px;
}

/* 紫色大卡片 */
.heroCard{
  background:linear-gradient(135deg,#2b0a6b,#0b5bd3);
  color:#fff;
  border-radius:22px;
  padding:18px;
  box-shadow:var(--shadow);
}
.heroTitle{
  font-weight:900;
  font-size:28px;
  letter-spacing:.4px;
  margin:0 0 6px;
}
.heroDesc{
  margin:0 0 14px;
  opacity:.90;
  line-height:1.45;
}
.primaryBtn{
  border:0;
  background:#2d74ff;
  color:#fff;
  font-weight:900;
  padding:10px 16px;
  border-radius:999px;
  cursor:pointer;
  box-shadow:0 12px 26px rgba(31,111,255,.25);
}
.primaryBtn:active{transform:scale(.99)}

.statGrid{
  display:grid;
  grid-template-columns:1fr 1fr 1fr;
  gap:10px;
  margin-top:14px;
}
.statItem{
  background:rgba(255,255,255,.12);
  border-radius:16px;
  padding:12px;
  min-height:70px;
}
.statLabel{opacity:.85;font-size:13px;margin-bottom:6px}
.statValue{font-size:20px;font-weight:900}

/* 快捷入口 */
.quickWrap{margin-top:14px}
.quickGrid{
  display:grid;
  grid-template-columns:repeat(4,1fr);
  gap:12px;
  background:#fff;
  padding:14px;
  border-radius:22px;
  box-shadow:var(--shadow);
}
.qitem{
  border:0;
  background:transparent;
  cursor:pointer;
  display:flex;
  flex-direction:column;
  align-items:center;
  gap:8px;
  padding:8px 4px;
}
.qicon{
  width:52px;height:52px;
  border-radius:16px;
  background:#f3f6ff;
  display:grid;
  place-items:center;
  font-size:20px;
}
.qtext{font-weight:900;font-size:14px;color:var(--text)}

/* 通用卡片 */
.card{
  background:#fff;
  border-radius:22px;
  box-shadow:var(--shadow);
  margin-top:14px;
  overflow:hidden;
}
.cardHead{
  padding:16px 16px 10px;
  display:flex;
  align-items:flex-start;
  justify-content:space-between;
  gap:12px;
}
.cardTitle{
  margin:0;
  font-size:26px;
  font-weight:900;
  letter-spacing:.2px;
}
.cardSub{
  margin-top:8px;
  color:var(--muted);
  font-size:14px;
  line-height:1.45;
}
.outlineBtn{
  border:1px solid var(--blue);
  color:var(--blue);
  background:#fff;
  font-weight:900;
  padding:8px 14px;
  border-radius:12px;
  cursor:pointer;
  white-space:nowrap;
}
.cardFoot{
  padding:14px 16px 18px;
  display:flex;
  justify-content:center;
}

.banner{
  padding:0 16px 16px;
}
.banner img{
  width:100%;
  height:160px;
  border-radius:18px;
  display:block;
  object-fit:cover;
  background:linear-gradient(135deg,#e7e7ff,#ffffff);
}

/* 商品列表 */
.list{padding:0 0 6px}
.item{
  display:flex;
  gap:12px;
  padding:14px 16px;
  border-top:1px solid var(--line);
  position:relative;
}
.thumb{
  width:88px;
  height:88px;
  border-radius:18px;
  background:#f2f2f7;
  overflow:hidden;
  flex:0 0 auto;
}
.thumb img{width:100%;height:100%;object-fit:cover;display:block}
.meta{flex:1;min-width:0}
.title{margin:0;font-weight:900}
.sub{margin:6px 0 8px;color:var(--muted);font-size:13px}
.row{display:flex;gap:10px;align-items:baseline}
.price{color:var(--blue);font-weight:900;font-size:18px}
.old{color:#98a2b3;text-decoration:line-through}

.heart{
  position:absolute;
  right:16px;
  top:22px;
  width:36px;height:36px;
  border:0;
  border-radius:999px;
  background:#fff;
  box-shadow:0 10px 20px rgba(0,0,0,.12);
  cursor:pointer;
  font-size:18px;
}
.heart.on{color:#ff3b30}

/* FAQ */
.accordion{padding:0 16px 18px}
.accItem{
  width:100%;
  border:0;
  background:#f7f8fb;
  padding:14px 14px;
  border-radius:14px;
  cursor:pointer;
  font-weight:900;
  display:flex;
  align-items:center;
  justify-content:space-between;
  margin-top:10px;
}
.accA{
  display:none;
  padding:10px 14px;
  color:var(--muted);
  line-height:1.6;
}
.accA.open{display:block}

/* 底部导航 */
.tabbar{
  position:fixed;
  left:0;right:0;bottom:0;
  background:#fff;
  border-top:1px solid var(--line);
  padding:10px 14px;
}
.tabbar .tab{
  max-width:460px;
}
.tabbar{
  display:flex;
  justify-content:center;
}
.tabbar .tab{
  width:100%;
  max-width:460px;
  display:grid;
  grid-template-columns:repeat(4,1fr);
  gap:6px;
}
.tab{
  border:0;
  background:transparent;
  cursor:pointer;
  display:flex;
  flex-direction:column;
  align-items:center;
  gap:6px;
  color:#667085;
  font-weight:900;
  padding:6px 0;
}
.tab span{font-size:12px}
.tab.active{color:var(--blue)}
